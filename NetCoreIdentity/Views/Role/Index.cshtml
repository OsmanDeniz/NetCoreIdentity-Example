@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="AddRole" asp-controller="Role" class="btn btn-outline-info btn-sm float-lg-right my-2"> Yeni Rol Ekle </a>
<table class="table table-sm table-hover">
    <tr>
        <td>Rol Adı</td>
        <td>İşlemler</td>
    </tr>

    @if (Model.Count <= 0)
    {
        <tr>
            <td>Sistemde kayitli rol bulunamadi.</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Duzenle</a>
                    <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                </td>
            </tr>
            }
            }

        </table>