@model UserSignInViewModel;

<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <link href="~/libs/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="mt-5">
        <form class="w-50 mx-auto my-auto align-middle p-4 shadow-lg" asp-action="LogIn">
            <h4 class="text-center lead font-weight-bold pb-4"> Sisteme Giris</h4>
            <div class="form-group row">
                <label class="col-sm-2">Kullanici Adi </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    <input asp-for="@Model.Username" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Sifre </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Password"  class="text-danger"></span>
                    <input asp-for="@Model.Password" class="form-control" />
                </div>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-control-sm">
                <input type="submit" name="signIn" value="Giris Yap" class="btn btn-primary" />
                <a asp-action="Register" class="float-right btn btn-outline-info">Kayit Ol</a>
            </div>
        </form>
    </div>

</body>
</html>
