@model UserRegisterViewModel;

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link href="~/libs/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="mt-5">
        <form class="w-50 mx-auto my-auto align-middle p-4 shadow" asp-action="register">
            <h4 class="text-center lead"> Kayit Ol </h4>
            <div class="form-group row">
                <label class="col-sm-2">Ad </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    <input asp-for="@Model.Name" class="form-control" />
                </div>
            </div>
             <div class="form-group row">
                <label class="col-sm-2">Soyad </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                    <input asp-for="@Model.Surname" class="form-control" />
                </div>
            </div>
             <div class="form-group row">
                <label class="col-sm-2">Kullanici Adi </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    <input asp-for="@Model.Username" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2">Sifre </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input asp-for="@Model.Password" class="form-control" />
                </div>
            </div>
           
            <div class="form-group row">
                <label class="col-sm-2">Sifre Tekrar </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                </div>
            </div>
           
            <div class="form-group row">
                <label class="col-sm-2">Email </label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
            </div>

            <div class="text-danger" asp-validation-summary="ModelOnly">

            </div>
                      
            <div class="form-control-sm">
                <input type="submit" name="register" value="Kayit Ol" class="btn btn-primary" />
                <a asp-action="LogIn" class="float-right btn btn-outline-info">Giris Yap</a>
            </div>
        </form>
    </div>

</body>
</html>
