@model UserUpdateViewModel
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="mt-5 w-75 mx-auto" asp-action="UpdateUser" asp-controller="Panel" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Ad</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Surname" class="col-sm-2 col-form-label">Soyad</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Surname" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Email" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.PhoneNumber" class="col-sm-2 col-form-label">Telefon </label>
        <div class="col-sm-10">
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Resim </label>
        <div class="col-sm-10">
            <img src="~/img/@Model.PictureURL" alt="@Model.Name" class="w-100 img-fluid col-sm-10" />
            <input type="file" asp-for="@Model.Picture" class="col-sm-2" />
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-info float-right">Kaydet</button>
</form>