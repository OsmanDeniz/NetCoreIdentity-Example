@model AppUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover table-sm">
    <tr>
        <th>Isim: </th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Soyisim: </th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th>Email: </th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Telefon: </th>
        <td>@Model.PhoneNumber</td>
    </tr>
    <tr>
        <th>Resim: </th>
        <td>@Model.PictureURL</td>
        <td>  <img src="~/img/@Model.PictureURL" class="img-fluid w-50 h-50"  alt="ProfilePicture" />      </td>
    </tr>

</table>